<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ListView?>


<GridPane 
	xmlns="http://javafx.com/javafx/8.0.60" 
	xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="view.SongController"
	hgap="10" vgap="10">
	
	
        
        <ListView fx:id="listView" />
        <Text fx:id= "details" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
 <Button fx:id="add" onAction="#add" text="Add" GridPane.columnIndex="0" GridPane.rowIndex="4" />
<Button fx:id="edit" onAction="#edit" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="4" />
<Button fx:id="delete" onAction="#delete" text="Delete" GridPane.columnIndex="4" GridPane.rowIndex="4" />
	<TextField fx:id="name" prefColumnCount="10" promptText="Song Name"
                   GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="artist" prefColumnCount="10" promptText="Artist Name"
                   GridPane.columnIndex="4" GridPane.rowIndex="1"/>
        <TextField fx:id="album" prefColumnCount="10" promptText="Album Name"
                   GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="year" prefColumnCount="10" promptText="Year" GridPane.columnIndex="4"
                   GridPane.rowIndex="2"/>
		
	<padding>
		<Insets bottom="10" left="10" right="10" top="10" />
	</padding>
   
</GridPane>


